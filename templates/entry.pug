  body(style="background-color:#343a40!important;")
    //a(href="/") Go to Public
    //a(href="/back-office") Go to Private
    form(class="form-signin" action="/login" method="post")
      h1(class="h3 mb-3 font-weight-normal" style="color: white;") Please sign in
      label(for="inputEmail" class="sr-only") Email address
      input(type="login" id="inputEmail" class="form-control" name="username" placeholder="Email address" required style="margin-bottom: 10px;")
      label(for="inputPassword" class="sr-only") Password
      input(type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required)
      button(class="btn btn-lg btn-primary btn-block" type="submit") Sign in
      p(class="mt-5 mb-3 text-muted") &copy; 2017-2018

